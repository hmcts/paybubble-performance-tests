#!groovy

/**
 * Pay bubble performance nightly pipeline
 * Author: Kapil Jain
 */

properties([
        pipelineTriggers([cron('00 21 * * *')]),
        parameters([
                string(name: 'ENVIRONMENT', defaultValue: 'Demo', description: 'Environment to test'),
                string(name: 'URL_TO_TEST', defaultValue: 'https://ccpay-bubble-frontend-demo.service.core-compute-demo.internal', description: 'The URL you want to run these tests against'),
                string(name: 'IDAM_URL', defaultValue: 'https://idam-web-public.demo.platform.hmcts.net/login', description: 'The IDAM API Url'),
                string(name: 'BaseURL', defaultValue: 'https://ccpay-bubble-frontend-demo.service.core-compute-demo.internal', description: 'The professional reference data Url')
        ])
])



@Library("Infrastructure") 


def product = "paybubble"
def component = "ccpaybubble-ui"

withNightlyPipeline("java", product, component) {
    env.TEST_URL = 'https://ccpay-bubble-frontend-demo.service.core-compute-demo.internal'
    env.BaseURL = 'https://ccpay-bubble-frontend-demo.service.core-compute-demo.internal'
    env.IDAM_URL = 'https://idam-web-public.demo.platform.hmcts.net/login'


    enablePerformanceTest()

    after('performanceTest') {
        steps.archiveArtifacts allowEmptyArchive: true, artifacts: 'functional-output/**/*'
    }

    enableSlackNotifications('#ccpaybubble-nightly-builds')

}
